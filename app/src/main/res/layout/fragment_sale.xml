<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/color_f7f7f7"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/include_title_normal"/>
    <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_32"
            android:layout_marginLeft="@dimen/dp_15"
            android:focusable="false"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:hint="搜索"
            android:textSize="@dimen/sp_12"
            android:paddingLeft="@dimen/dp_10"
            android:singleLine="true"
            android:background="@drawable/search_input_selector"
            android:textColor="@color/color_222222"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ListView
                android:id="@+id/lv_cart"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_alignParentBottom="true"
                android:background="@color/color_99222222">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <LinearLayout
                        android:id="@+id/ll_select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:padding="@dimen/dp_10">
                    <ImageView
                            android:id="@+id/iv_select"
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_16"
                            android:src="@drawable/sale_cart_checkbox_selector"/>
                </LinearLayout>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/color_ffffff"
                        android:textSize="@dimen/sp_14"
                        android:text="全选"/>
                <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_15"
                        android:background="@color/color_5f5f5f"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/color_ffffff"
                        android:textSize="@dimen/sp_12"
                        android:text="合计：￥254.56"/>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:id="@+id/tv_submit"
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="@dimen/dp_2"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:textColor="@color/color_ffffff"
                            android:textSize="@dimen/sp_16"
                            android:background="@drawable/sale_cart_submit_bg_selector"
                            android:text="提交"/>
                </RelativeLayout>
            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>
</LinearLayout>