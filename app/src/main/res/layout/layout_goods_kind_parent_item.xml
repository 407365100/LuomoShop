<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/color_f7f7f7">
    <RelativeLayout
            android:id="@+id/rl_parent_kind"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/setting_item_bg_selector">
        <TextView
                android:id="@+id/tv_name"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_222222"/>
        <ImageView
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_20"
                android:src="@drawable/goods_add_right_arrow"/>
        <ImageView
                android:id="@+id/iv_delete"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_20"
                android:src="@drawable/goods_kind_delete"
                android:visibility="gone"/>
    </RelativeLayout>
    <ListView
            android:id="@+id/lv_item_content"
            android:layout_marginTop="@dimen/dp_1"
            android:divider="@null"
            android:dividerHeight="@dimen/dp_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
</LinearLayout>