<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fitsSystemWindows="true">
    <include
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            layout="@layout/include_title_back"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_32"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/search_input_selector"
            android:gravity="center_vertical">
        <EditText
                android:id="@+id/et_search_content"
                android:layout_width="@dimen/dp_250"
                android:layout_height="match_parent"
                android:hint="搜索商品"
                android:textSize="@dimen/sp_12"
                android:paddingLeft="@dimen/dp_10"
                android:singleLine="true"
                android:background="@color/color_00000000"
                android:textColor="@color/color_222222"/>
        <ImageView
                android:id="@+id/iv_search_content_delete"
                android:layout_alignRight="@id/et_search_content"
                android:gravity="center_vertical"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:padding="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_centerVertical="true"
                android:scaleType="center"
                android:background="@drawable/login_account_delete"
                android:visibility="gone"/>
        <TextView
                android:id="@+id/tv_search"
                android:layout_width="@dimen/dp_80"
                android:layout_height="match_parent"
                android:paddingRight="@dimen/dp_18"
                android:paddingLeft="@dimen/dp_18"
                android:layout_marginEnd="@dimen/dp_10"
                android:gravity="center"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_14"
                android:background="@drawable/search_button_bg_selector"
                android:visibility="gone"
                android:text="搜索"/>
    </RelativeLayout>
    <com.luomo.shopping.widget.pulltorefresh.XListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"/>
</LinearLayout>