<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fitsSystemWindows="true"
              android:background="@color/color_f7f7f7"
              android:orientation="vertical">
    <include layout="@layout/include_title_back"/>

    <RelativeLayout
            android:id="@+id/rl_parent_kind"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/setting_item_bg_selector">
        <TextView
                android:id="@+id/tv_goods_kind"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_width="@dimen/dp_90"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_222222"
                android:text="父分类"/>
        <TextView
                android:id="@+id/tv_parent_kind"
                android:layout_toEndOf="@id/tv_goods_kind"
                android:layout_width="@dimen/dp_180"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:textSize="@dimen/sp_14"
                android:text="无"
                android:textColor="@color/color_222222"
                android:background="@null"/>
        <ImageView
                android:id="@+id/iv_goods_kind"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_20"
                android:src="@drawable/goods_add_right_arrow"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_1"
            android:background="@color/color_ffffff">
        <TextView
                android:id="@+id/tv_kind_name"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_width="@dimen/dp_90"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_222222"
                android:text="名称"/>
        <EditText
                android:id="@+id/et_kind_name"
                android:layout_toEndOf="@id/tv_kind_name"
                android:layout_width="@dimen/dp_180"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:textSize="@dimen/sp_14"
                android:maxLength="20"
                android:hint="请输入类名"
                android:textColor="@color/color_222222"
                android:background="@null"/>
    </RelativeLayout>
</LinearLayout>