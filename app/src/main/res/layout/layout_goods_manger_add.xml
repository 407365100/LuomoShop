<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_manager_add"
              android:orientation="vertical"
              android:fitsSystemWindows="true"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    android:background="@color/color_f7f7f7"
    <include layout="@layout/include_title_back"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/color_ffffff">
        <TextView
                android:id="@+id/tv_two_code"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_width="@dimen/dp_90"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_222222"
                android:text="二维码"/>
        <EditText
                android:id="@+id/et_two_code"
                android:layout_toEndOf="@id/tv_two_code"
                android:layout_width="@dimen/dp_180"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:textSize="@dimen/sp_14"
                android:singleLine="true"
                android:maxLength="20"
                android:hint="请点击右侧二维码图标"
                android:textColor="@color/color_222222"
                android:background="@null"/>
        <ImageView
                android:id="@+id/iv_two_code_one"
                android:layout_toEndOf="@id/et_two_code"
                android:gravity="center_vertical|start"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:src="@drawable/two_code_bg_selector"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_1"
            android:background="@color/color_ffffff">
        <TextView
                android:id="@+id/tv_name"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_width="@dimen/dp_90"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_222222"
                android:text="名称"/>
        <EditText
                android:id="@+id/et_name"
                android:layout_toEndOf="@id/tv_name"
                android:layout_width="@dimen/dp_180"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:textSize="@dimen/sp_14"
                android:singleLine="true"
                android:maxLength="20"
                android:hint="请输入商品名称"
                android:textColor="@color/color_222222"
                android:background="@null"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_1"
            android:background="@color/color_ffffff">
        <TextView
                android:id="@+id/tv_spec"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_width="@dimen/dp_90"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_222222"
                android:text="规格"/>
        <EditText
                android:id="@+id/et_spec"
                android:layout_toEndOf="@id/tv_spec"
                android:layout_width="@dimen/dp_180"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:textSize="@dimen/sp_14"
                android:singleLine="true"
                android:maxLength="20"
                android:hint="@string/add_goods_spec_error"
                android:textColor="@color/color_222222"
                android:background="@null"/>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/rl_kind"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/setting_item_bg_selector">
        <TextView
                android:id="@+id/tv_kind_hint"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_width="@dimen/dp_90"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_222222"
                android:text="分类"/>
        <TextView
                android:id="@+id/tv_kind"
                android:layout_toEndOf="@id/tv_kind_hint"
                android:layout_width="@dimen/dp_180"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:textSize="@dimen/sp_14"
                android:hint="请选择分类"
                android:textColor="@color/color_222222"
                android:background="@null"/>
        <ImageView
                android:id="@+id/iv_goods_kind"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_20"
                android:src="@drawable/goods_add_right_arrow"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_1"
            android:background="@color/color_ffffff">
        <TextView
                android:id="@+id/tv_price"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_width="@dimen/dp_90"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_222222"
                android:text="价格"/>
        <EditText
                android:id="@+id/et_price"
                android:layout_toEndOf="@id/tv_price"
                android:layout_width="@dimen/dp_180"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:inputType="numberDecimal"
                android:textSize="@dimen/sp_14"
                android:hint="请输入价格"
                android:singleLine="true"
                android:maxLength="20"
                android:textColor="@color/color_222222"
                android:background="@null"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/rl_unit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_1"
            android:background="@color/color_ffffff">
        <TextView
                android:id="@+id/tv_unit_hint"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_width="@dimen/dp_90"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_222222"
                android:text="计量单位"/>
        <TextView
                android:id="@+id/tv_unit"
                android:layout_toEndOf="@id/tv_unit_hint"
                android:layout_width="@dimen/dp_180"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:textSize="@dimen/sp_14"
                android:hint="请选择单位"
                android:textColor="@color/color_222222"
                android:background="@null"/>
        <ImageView
                android:id="@+id/iv_unit"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_20"
                android:src="@drawable/goods_add_right_arrow"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/color_ffffff">
        <TextView
                android:id="@+id/tv_goods_memo"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_width="@dimen/dp_90"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|start"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_222222"
                android:text="备注"/>
        <EditText
                android:id="@+id/et_goods_memo"
                android:layout_toEndOf="@id/tv_goods_memo"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="@dimen/dp_180"
                android:layout_height="wrap_content"
                android:gravity="start|top"
                android:textSize="@dimen/sp_14"
                android:minLines="5"
                android:maxLength="300"
                android:hint="请输入备注信息"
                android:textColor="@color/color_222222"
                android:background="@null"/>
    </RelativeLayout>
</LinearLayout>