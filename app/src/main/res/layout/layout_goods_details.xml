<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:fitsSystemWindows="true"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/include_title_back"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:id="@+id/iv_kind"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_300"
                    android:scaleType="centerCrop"
                    android:background="@drawable/goods_xiatiao"/>

            <TextView
                    android:id="@+id/tv_goods_name"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:lineSpacingExtra="@dimen/dp_1"
                    android:textSize="@dimen/sp_16"
                    android:gravity="left"
                    android:textColor="@color/color_000000"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="新疆库尔勒乡里250g内环细腻，香浓可口个清热圣经多只双扣.真是个完美的好孩子"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:orientation="vertical">
                <TextView
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_45"
                        android:gravity="center_vertical|start"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/color_222222"
                        android:text="￥120元/袋"/>
                <View
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_5"
                        android:background="@color/color_ffffff"/>
                <TextView
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_45"
                        android:gravity="center_vertical|start"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/color_222222"
                        android:text="规格:400g 注：前面应该是666666"/>
                <View
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0d5"
                        android:background="@color/color_ffffff"/>
                <TextView
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_45"
                        android:gravity="center_vertical|start"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/color_222222"
                        android:text="商品编号:001"/>
                <View
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0d5"
                        android:background="@color/color_ffffff"/>
                <TextView
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_45"
                        android:gravity="center_vertical|start"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/color_222222"
                        android:text="二维码:123333333333"/>
                <View
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0d5"
                        android:background="@color/color_ffffff"/>
                <TextView
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_45"
                        android:gravity="center_vertical|start"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/color_222222"
                        android:text="分类:食品"/>
                <View
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0d5"
                        android:background="@color/color_ffffff"/>
                <TextView
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_45"
                        android:gravity="center_vertical|start"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/color_222222"
                        android:text="剩余库存:120袋约12箱"/>
                <View
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0d5"
                        android:background="@color/color_ffffff"/>
                <TextView
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_45"
                        android:gravity="center_vertical|start"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/color_222222"
                        android:text="备注:这个是从谁那进的"/>
                <View
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0d5"
                        android:background="@color/color_ffffff"/>
                <TextView
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_45"
                        android:gravity="center_vertical|start"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/color_222222"
                        android:text="供应商:这个是从谁那进的"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>