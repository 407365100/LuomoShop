<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/color_f7f7f7"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_140"
            android:background="@color/action_bar_bg">
        <ImageView
                android:id="@+id/iv_head"
                android:layout_width="@dimen/dp_64"
                android:layout_height="@dimen/dp_64"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_20"
                android:src="@drawable/default_head"/>
        <TextView
                android:layout_toRightOf="@+id/iv_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_43"
                android:text="洛漠"
                android:textColor="@color/color_ffffff"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_43"
                android:scaleType="fitXY"
                android:background="@drawable/profile_head_right_arrow"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/setting_item_bg_selector">
        <ImageView
                android:id="@+id/iv_one"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_28"
                android:src="@drawable/profile_favorite_icon"/>
        <TextView
                android:layout_toRightOf="@+id/iv_one"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_222222"
                android:text="待定1"/>
        <ImageView
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_20"
                android:src="@drawable/goods_add_right_arrow"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_1"
            android:background="@drawable/setting_item_bg_selector">
        <ImageView
                android:id="@+id/iv_two"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_28"
                android:src="@drawable/profile_icon_recommend"/>
        <TextView
                android:layout_toRightOf="@+id/iv_two"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_222222"
                android:text="待定2"/>
        <ImageView
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_20"
                android:src="@drawable/goods_add_right_arrow"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_1"
            android:background="@drawable/setting_item_bg_selector">
        <ImageView
                android:id="@+id/iv_three"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_28"
                android:src="@drawable/profile_icon_welfare"/>
        <TextView
                android:layout_toRightOf="@+id/iv_three"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_222222"
                android:text="待定2"/>
        <ImageView
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_20"
                android:src="@drawable/goods_add_right_arrow"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/rl_setting"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/setting_item_bg_selector">
        <ImageView
                android:id="@+id/iv_setting"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_28"
                android:src="@drawable/profile_icon_setting"/>
        <TextView
                android:layout_toRightOf="@+id/iv_setting"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_222222"
                android:text="设置"/>
        <ImageView
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_20"
                android:src="@drawable/goods_add_right_arrow"/>
    </RelativeLayout>
</LinearLayout>