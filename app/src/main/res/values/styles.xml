<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme.Light">
        <!-- 隐藏系统标题栏 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 应用背景色 -->
        <item name="android:windowBackground">@color/color_f7f7f7</item>
        <!-- 不允许横屏 -->
        <item name="android:screenOrientation">portrait</item>
    </style>
    <style name="TranslucentTheme" parent="android:Theme.Light">
        <!-- 隐藏系统标题栏 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <!-- 不允许横屏 -->
        <item name="android:screenOrientation">portrait</item>
    </style>
    <!-- 弹出框的样式 -->
    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:background">@null</item>
        <!-- 去掉四个点的黑色区域 -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <!--主界面-->
    <style name="MainBottomLL">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">@dimen/dp_55</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:onClick">onClickTab</item>
    </style>
    <style name="MainBottomImage">
        <item name="android:layout_width">@dimen/dp_22</item>
        <item name="android:layout_height">@dimen/dp_22</item>
        <item name="android:focusable">false</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <style name="MainBottomText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/main_bottom_text_selector</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:layout_marginTop">@dimen/dp_3</item>
    </style>
    <!--分割线-->
    <style name="VerticalSplitView0d1">
        <item name="android:layout_width">@dimen/dp_0d1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_e0e0e0</item>
    </style>
    <style name="HorizontalSplitView0d1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_0d1</item>
        <item name="android:background">@color/color_e0e0e0</item>
    </style>
</resources>